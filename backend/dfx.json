{
  "canisters": {
    "hefin_backend": {
      "type": "motoko",
      "main": "src/hefin_backend/main.mo",
      "candid": "src/hefin_backend/hefin_backend.did",
      "build": "cargo build --target wasm32-unknown-unknown --release",
      "wasm": "target/wasm32-unknown-unknown/release/hefin_backend.wasm"
    },
    "hefin_frontend": {
      "type": "assets",
      "source": "src/hefin_frontend/dist",
      "dependencies": [
        "hefin_backend"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": [
        "https://ic0.app"
      ],
      "type": "persistent"
    }
  },
  "version": 1
}
